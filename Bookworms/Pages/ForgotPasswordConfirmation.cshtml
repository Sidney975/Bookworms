@page
@model Bookworms.Pages.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    <p>If an account with that email exists, you will receive an email with instructions to reset your password.</p>
    <a asp-page="/Login" class="btn btn-primary">Return to Login</a>
</div>
